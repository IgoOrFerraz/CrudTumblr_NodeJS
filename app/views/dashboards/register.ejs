<html>
    <head>
        <title>Register</title>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        
        <!-- Favicon -->
        <link rel="icon" href="/imges/favicon.png">
        
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
      
        
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/dashboard/main.js"></script>
        
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="/dashboard/style.css">

        <style>
            span{
                margin: 20px 10px;
            }
        </style>
    </head>
    <body>
        <% include ../layout/menu.ejs %>

        <div class="row">

            <div class="col-lg-12 bg-dark" id="conteudo">
                <form action="/dashboards/register/edit" method="POST">
                    <span><h2>Editar Publicação - <%=dados[0].id%></h2></span>
                    <hr>

                    <div class="row">
                        <div class="col-sm-3">
                            <label for="idDisabled">ID</label>
                            <input type="text" name="idDisabled" style="text-align: center;" class="form-control" value="<%=dados[0].id%>" disabled>
                            <input type="hidden" name="id" value="<%=dados[0].id%>">
                        </div>
    
                        <div class="col-sm-9">
                            <label for="titulo">Titulo</label>
                            <input type="text" id="titulo" style="text-align: center;" class="form-control" value="<%=dados[0].title%>" name="title" required>
                        </div>

                    </div>
                    
                    <hr>

                    <textarea class="form-control" id="corpo" name="body" cols="30" rows="8"><%=dados[0].body%></textarea>
                    
                    <hr>

                    <div class="row justify-content-around">
                        <div class="col-sm-8">
                            <input type="submit" class="btn btn-primary btn-block" value="Editar Registro">
                        </div>
                        <div class="col-sm-4">
                            <input type="button" class="btn btn-outline-primary" onclick="limpar()" value="Limpar">
                            <input type="button" class="btn btn-outline-primary" onclick="window.location.href = '/dashboards/register/delete/<%=dados[0].id%>'" value="Excluir Registro">
                        </div>    
                    </div>
                </form>
            </div>
        </div>
    </body>
    <script>
        function limpar(){
            $('#corpo').html('')
        }
    </script>
</html>