<html>
    <head>
        <title>Inserir Anuncio</title>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        
        <!-- Favicon -->
        <link rel="icon" href="/imges/favicon.png">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
      
        
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/dashboard/main.js"></script>
        
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="/dashboard/style.css">
    </head>

    <body>
        <% if(msg.length > 0){%>
            <% if(msg == "A"){ %>
                <div class="alert alert-success fixed-top" style="position:absolute; width:100%; z-index:1"><strong>Registro Inserido com Sucesso</strong></div>
            <% } %>
        <% } %>


        <%- include ../layout/menu.ejs %>
        
            <div class="row">

                <div class="col-lg-12 bg-dark" id="conteudo">
                    <form action="/dashboards/inserirPublicacao/inserir" method="POST">
                        <span><h2>Inserir Publicação</h2></span>
                        <hr>
                        <input type="text" class="form-control" name="title" placeholder="Titulo da Publicação" required>
                        <textarea class="form-control" name="body" cols="30" rows="5" placeholder="Digite sua Publicação"></textarea>
                        
                        <div class="col-sm-12">
                            <div class="row" style="justify-content: space-around;">
                                <input type="date" class="form-control col-sm-5" name="date">
                                <input type="time" class="form-control col-sm-5" name="time">
                            </div>
                        </div>
                        
                        <hr>
                        <input type="submit" class="btn btn-primary btn-block" value="Inserir">
                        <input type="button" class="btn btn-outline-primary btn-block" value="Limpar" onclick="window.location.href='/dashboards/publicacoes'">
                    </form>
                </div>

            </div>
            
        </div>
    </body>
</html>