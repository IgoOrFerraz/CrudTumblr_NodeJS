    <script>
        $(document).ready(function(){
            $.ajax({
                url: '/TumblrStatus',
                method: 'post',
                success: function(data){
                    $('#conteudo').html(data)
                },
                error: function(error){
                    throw error
                }
            })
        })
    </script>

    <body>

        <% if(msg.length > 0){%>
            <% if(msg == "A"){ %>
                <div class="alert alert-warning"><strong>Tumblr Deslogado com Sucesso</strong></div>
            <% } %>
            <% if(msg == "B"){ %>
                <div class="alert alert-success"><strong>Tumblr Conectado com Sucesso</strong></div>
            <% } %>
        <% } %>

        <%- include ../layout/menu.ejs %>
        
            <div class="row">

                <div class="col-lg-12 bg-dark" id="conteudo"></div>

            </div>
        
        </div>
    </body>
